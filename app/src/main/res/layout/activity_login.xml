<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imgLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/foreground_design"
        android:scaleType="centerCrop"
        android:src="@drawable/fundo_welcome" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="95dp" />

        <ImageView
            android:layout_width="354dp"
            android:layout_height="68dp"
            android:src="@drawable/logo" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Faça login em sua conta"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/txtEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#CCCCCC"
            android:drawablePadding="13dp"
            android:fontFamily="@font/poppins_semibold"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:paddingVertical="15sp"
            android:paddingHorizontal="10sp"
            android:layout_marginHorizontal="25sp"
            android:textSize="15sp"
            android:textColorHint="#DDDADA" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10sp" />

        <EditText
            android:id="@+id/txtSenhaLogin"
            android:backgroundTint="#CCCCCC"
            android:layout_width="match_parent"
            android:drawablePadding="13dp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:paddingVertical="15sp"
            android:paddingHorizontal="10sp"
            android:layout_marginHorizontal="25sp"
            android:textColorHint="#DDDADA"
            android:hint="Senha"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:paddingVertical="11dp"
            android:backgroundTint="@color/blue"
            android:layout_marginHorizontal="25sp"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/btn_entrar_login" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:fontFamily="@font/poppins_semibold"
                android:text="Não possui uma conta?"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btnRegistrarLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_semibold"
                android:paddingLeft="5sp"
                android:text="@string/btn_registrar"
                android:textAlignment="textStart"
                android:textColor="#01FAAA"
                android:textSize="13sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>